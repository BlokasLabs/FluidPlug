#!/usr/bin/make -f
# Makefile for 2FS #
# ---------------- #
# Created by falkTX
#

include Makefile.mk

# ---------------------------------------------------------------------------------------------------------------------

all: build

build: FluidGM

clean:

install:

# ---------------------------------------------------------------------------------------------------------------------

FluidGM = \
	FluidGM.lv2/2fs.so \
	FluidGM.lv2/2fs.ttl \
	FluidGM.lv2/manifest.ttl

FluidGM: $(FluidGM)

# ---------------------------------------------------------------------------------------------------------------------

%.lv2/2fs.so: source/2fs.c
	$(CC) $< -D_2FS_LABEL=\"$*\" $(BUILD_C_FLAGS) $(FLUIDSYNTH_FLAGS) $(LINK_FLAGS) $(FLUIDSYNTH_LIBS) $(SHARED) -o $@

# ---------------------------------------------------------------------------------------------------------------------
